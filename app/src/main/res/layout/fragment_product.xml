<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragments.ManageProductFragment">

<!--    Main Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Product"
        android:gravity="center"
        android:textColor="@color/purple"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"/>

<!--    Linear Layout for purchased and ToBuy Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        Purchased Button-->
        <Button
            android:id="@+id/purchasedprodfrag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Purchased"
            android:backgroundTint="@color/purple"
            android:textStyle="bold"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:layout_margin="20sp"/>

<!--        To Buy Button-->
        <Button
            android:id="@+id/tobuyprod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To buy"
            android:textStyle="bold"
            android:backgroundTint="@color/purple"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20sp"/>
    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pruductmanagerecy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"/>
</LinearLayout>